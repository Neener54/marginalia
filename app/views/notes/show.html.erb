<%= content_for :title do %>
<%= @note.title %>
<% end %>

<h2><%= @note.title %></h2>

<%= raw @note.rendered_body %>

<%= content_for :sidebar do %>
  <div class="btn-group">
  <a href="/notes/<%= @note.id %>/append" class="btn btn-success"><i class="icon-plus icon-white"></i></a>
  <%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_note_path(@note), :class => 'btn' %>
  <%= link_to '<i class="icon-trash"></i>'.html_safe, @note, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %>
  <a href="/notes/<%= @note.id %>/share" class="btn"><i class="icon-eye-open"></i></a>
  <% if @note.share_id %>
  <a href="/notes/<%= @note.id %>/unshare" class="btn"><i class="icon-eye-close"></i></a></br>
  <% end %>
  <button class="btn" data-toggle="collapse" data-target="#info"><i class="icon-info-sign"></i></button>
  </div>


  <div id="info" class="collapse out">
  <% unless is_guest? %>
  <strong>F:</strong> <%= @note.from_address %><br>
  <% end %>
  <strong>C:</strong> <%= human_local_datetime(@note.created_at, @note.user.time_zone) %><br>
  <strong>U:</strong> <%= human_local_datetime(@note.updated_at, @note.user.time_zone) %><br>
  <% if @note.tag_list.length > 0 %>
  <h4>Tags</h4>
  <ul>
    <% @note.tag_list.each do |tag| %>
    <li><a href="/tags/<%= tag %>"><%= tag %></a></li>
    <% end %>
  </ul>
  <% end %>
  <h4>Versions</h4>
  <%= select(:note, :version_id, @note.versions.collect { |v| [human_local_datetime(v.created_at, @note.user.time_zone), v.id] }, {:selected => @version_id }, {:id => 'version_select'}) %>
  </div>
<% end %>
