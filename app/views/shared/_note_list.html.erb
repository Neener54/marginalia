<table class="table table-striped sorted">
  <thead>
    <tr>
      <th>Title</th>
      <th>Last Updated</th>
    </tr>
  </thead>
  <tbody>
    <% notes.each do |note| %>
    <tr>
      <td><%= link_to note.title, note %></td>
      <td><%= human_local_datetime(note.updated_at, note.user.time_zone) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
